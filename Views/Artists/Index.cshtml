
@model IEnumerable<ImageResizeUpload.Models.Artist>

@{
    ViewData["Title"] = "Index";
   
  
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach(var item in Model)
{
    
    <a action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

    <h1>In Div</h1>

 <div style="background:url(@(ImageResizeUpload.Helper.ImageSize.Get(@item.Dp,"medium"))); object-fit:cover; background-repeat:no-repeat; height:800px;">

 </div>
    <hr />
     <h3>Original Image</h3>
<div>
   <img src="@item.Dp" />
</div>
    <h3>Full Screen</h3>
<div>
   <img src="@(ImageResizeUpload.Helper.ImageSize.Get(@item.Dp,"fullscreen"))" />
</div>

<hr />
<h3>Medium</h3>
<div>
    <img src="@(ImageResizeUpload.Helper.ImageSize.Get(@item.Dp,"medium"))" />
</div>
<hr />
<h3>Thumb</h3>
<div>
   <img src="@(ImageResizeUpload.Helper.ImageSize.Get(@item.Dp,"thumb"))" />
</div>

}